<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Test.App.UserControls.AddressControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Test.App.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            FontSize="15"
            Text="Address" />
        <!--
        <TextBox
            x:Name="AddressNameTextBox"
            Grid.Row="1"
            Grid.Column="0"
            Header="Address Name"
            IsColorFontEnabled="True"
            PlaceholderForeground="Gray"
            PlaceholderText="Enter Address Name"
            Text="{x:Bind AddressVM.Name, Mode=TwoWay}" />
        <TextBox
            x:Name="UnitNumTextBox"
            Grid.Row="2"
            Grid.Column="0"
            Header="Unit Number"
            IsColorFontEnabled="True"
            PlaceholderForeground="Gray"
            PlaceholderText="Enter Unit Number"
            Text="{x:Bind AddressVM.UnitNum, Mode=TwoWay}" />
        -->
        <TextBox
            x:Name="StreetNumTextBox"
            Grid.Row="3"
            Grid.Column="0"
            Header="Street Number"
            IsColorFontEnabled="True"
            PlaceholderForeground="Gray"
            PlaceholderText="Enter Street Number"
            Text="{x:Bind StreetNum, Mode=TwoWay}" />

        <TextBox
            x:Name="StreetNameTextBox"
            Grid.Row="4"
            Grid.Column="0"
            Header="Street Name"
            IsColorFontEnabled="True"
            PlaceholderForeground="Gray"
            PlaceholderText="Enter Street Name"
            Text="{x:Bind ViewModel.StreetName, Mode=TwoWay}" />
        <!--
        <TextBox
            x:Name="StreetTypeTextBox"
            Grid.Row="5"
            Grid.Column="0"
            Header="Street Type"
            IsColorFontEnabled="True"
            PlaceholderForeground="Gray"
            PlaceholderText="Enter Street Type"
            Text="{x:Bind AddressVM.StreetType, Mode=TwoWay}" />
        <TextBox
            x:Name="SuburbTextBox"
            Grid.Row="6"
            Grid.Column="0"
            Header="Suburb"
            IsColorFontEnabled="True"
            PlaceholderForeground="Gray"
            PlaceholderText="Enter Suburb"
            Text="{x:Bind AddressVM.Suburb, Mode=TwoWay}" />
        -->
    </Grid>
</UserControl>
