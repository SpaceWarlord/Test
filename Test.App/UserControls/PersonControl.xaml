<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Test.App.UserControls.PersonControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Test.App.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Text="First Name" />
        <TextBox
            x:Name="FirstName"
            Grid.Row="0"
            Grid.Column="1" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Text="Last Name" />
        <TextBox
            x:Name="LastName"
            Grid.Row="1"
            Grid.Column="1" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Text="Nick Name" />
        <TextBox
            x:Name="NickName"
            Grid.Row="2"
            Grid.Column="1" />
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Text="Gender" />
        <TextBox
            x:Name="Gender"
            Grid.Row="3"
            Grid.Column="1" />
        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Text="Date of Birth" />
        <TextBox
            x:Name="Dob"
            Grid.Row="4"
            Grid.Column="1" />
        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Text="Phone" />
        <TextBox
            x:Name="Phone"
            Grid.Row="5"
            Grid.Column="1" />
        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Text="Email" />
        <TextBox
            x:Name="Email"
            Grid.Row="6"
            Grid.Column="1" />
        <TextBlock
            Grid.Row="7"
            Grid.Column="0"
            Text="Highlight Color" />
        <TextBox
            x:Name="HighlightColor"
            Grid.Row="7"
            Grid.Column="1" />
        <local:AddressControl />
    </Grid>
</UserControl>
